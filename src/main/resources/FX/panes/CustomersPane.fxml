<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="1200"
            fx:controller="Interface.InterfaceAdmin.controllers.panes.CustomersPaneController"
>

    <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0">
        <!-- Table Header -->
        <HBox style="-fx-background-color: lightgray;">
            <Label style="-fx-padding: 5px;" HBox.hgrow="ALWAYS" prefWidth="170">User ID</Label>
            <Label style="-fx-padding: 5px;" HBox.hgrow="ALWAYS" prefWidth="170">Username</Label>
            <Label style="-fx-padding: 5px;" HBox.hgrow="ALWAYS" prefWidth="170">Email</Label>
            <Label style="-fx-padding: 5px;" HBox.hgrow="ALWAYS" prefWidth="170">Role</Label>
        </HBox>

        <!-- Table Content (Populated Dynamically) -->
        <VBox fx:id="tableContent" VBox.vgrow="ALWAYS"/>

    </VBox>

</AnchorPane>
